<resources>
    <!-- Base application theme. -->
    <style name="Theme.Nomad" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="General.Background" parent="Theme.Nomad">
        <item name="android:background">#f7f7f7</item>
    </style>

    <style name="Button.Background" parent="Theme.Nomad">
        <item name="android:background">#201A30</item>
        <item name="android:textColor">@color/light_white</item>
    </style>

    <style name="TextView.Bold" parent="Theme.Nomad">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Secondary" parent="Theme.Nomad">
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Additional" parent="Theme.Nomad">
        <item name="android:textColor">@color/additional_info</item>
    </style>

    <style name="EditText.Hint" parent="Theme.Nomad">
        <item name="android:textColorHint">@color/additional_info</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="Button.Forms" parent="Theme.Nomad">
        <item name="android:backgroundTint">#edf2fa</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ImageButton.Themed" parent="Theme.Nomad">
        <item name="android:src">@drawable/ic_edit</item>
    </style>

    <style name="ImageButton.Back.Themed" parent="Theme.Nomad">
        <item name="android:src">@drawable/ic_back</item>
    </style>
</resources>